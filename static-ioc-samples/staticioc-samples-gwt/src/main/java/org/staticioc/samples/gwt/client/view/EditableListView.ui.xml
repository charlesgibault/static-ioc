<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
    .contactsViewButtonHPanel {
      margin: 5px 0px 0x 5px;
    }
    .contactsViewContactsFlexTable {
      margin: 5px 0px 5px 0px;
    }

  </ui:style>

  <g:DecoratorPanel>
    <g:VerticalPanel>
      <g:HorizontalPanel addStyleNames="{style.contactsViewButtonHPanel}">
        <g:Label ui:field="firstName"/>
        <g:TextBox ui:field="firstNameValue"/>
        
        <g:Label ui:field="lastName"/>
        <g:TextBox ui:field="lastNameValue"/>
        
        <g:Label ui:field="email"/>
        <g:TextBox ui:field="emailValue"/>
        
        <g:Button ui:field="addButton">Add</g:Button>
      </g:HorizontalPanel>
      <g:FlexTable ui:field="contactsTable" addStyleNames="{style.contactsViewContactsFlexTable}"/>
      <g:HorizontalPanel addStyleNames="{style.contactsViewButtonHPanel}">
        <g:Button ui:field="deleteButton">Delete selected</g:Button>
      </g:HorizontalPanel>
    </g:VerticalPanel>
  </g:DecoratorPanel>
</ui:UiBinder>