<?xml version="1.0" encoding="UTF-8"?>
<beans 	xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:p="http://www.springframework.org/schema/p"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
		
	<import resource="test2.xml"/>
	
	<bean id="personBean" class="com.mkyong.common.Person">
		<property name="name" value="mkyong1" />
		<property name="username">
    		<value>root</value>
  		</property>
		<property name="address" value="address 1" />
		<property name="country">
			<ref>number10</ref>
  		</property>
  		<property name="birthCountry">
			<idref bean="USA"/>
  		</property>
		<property name="age" value="28" />
		<property name="referecence" ref="customerBean" />
	</bean>

	<!-- class with id and p notation " -->
	<bean class="com.interface21.spring2.ioc.House" name="number10" p:name="10 Downing Street" p:p-ref="personBean" p:person-ref="personBean"/>
	
	 <!-- class without id  -->
	<bean class="com.interface21.spring2.ioc.Person" p:name="Tony" p:age="53" p:house-ref="number10" />
	
	<!-- (bean | ref | idref | list | set | map | props | value | null) -->
	
	<!-- class with param collection id -->
	<bean id="customerBean" class="com.mkyong.common.Customer">

		<!-- java.util.List -->
		<property name="lists">
			<list>
				<value type="java.lang.String">1</value>
				<value type="java.lang.Integer">2</value>
				<ref bean="personBean" />
				<ref>secondRef</ref>
				<idref>thirdRef</idref>
				<bean class="com.mkyong.common.Person2">
					<property name="name" value="mkyongList" />
					<property name="address" value="address" />
					<property name="age" value="28" />
				</bean>
			</list>
		</property>

		<!-- java.util.Set -->
		<property name="sets">
			<set>
				<value>1</value>
				<ref bean="personBean" />
				<bean class="com.mkyong.common.Person3">
					<property name="name" value="mkyongSet" />
					<property name="address" value="address" />
					<property name="age" value="29" />
				</bean>
			</set>
		</property>
			

		<!-- java.util.Map  -->
		<property name="maps">
			<map>
				<entry key="Key 1" value="1" />
				<entry key-ref="Key2" value="42" />
				<entry key="Key 3" value-ref="personBean" />
				<entry key="Key 4"><value>test</value></entry>
				<entry key="Key 5">
					<bean class="com.mkyong.common.Person">
						<property name="name" value="mkyongMap" />
						<property name="address" value="address" />
						<property name="age" value="28" />
					</bean>
				</entry>
				
				<entry>
					<key>
						<value>Key 6</value>
					</key>
					<bean class="com.mkyong.common.Person3">
						<property name="name" value="mkyongMap" />
						<property name="address" value="address" />
						<property name="age" value="28" />
					</bean>
				</entry>
				<entry key="Key 7"><value>2</value></entry>
				<entry>
					<key>
						<bean class="com.mkyong.common.Person5">
							<property name="name" value="mkyongMap2" />
							<property name="address" value="address2" />
							<property name="age" value="32" />
						</bean>
					</key>
					<value>woah</value>
				</entry>
				<entry key="Key 8"><null/></entry>
			</map>
		</property>
	
		<!-- java.util.Properties -->
		<property name="props">
			<props>
				<prop key="admin">admin@nospam.com</prop>
				<prop key="support">support@nospam.com</prop>
				<prop key="test">test@nospam.com</prop>
			</props>
		</property>
	</bean>

	<!-- class with constructor args -->
	<bean id="exampleBean" class="examples.ExampleBean">
  		<constructor-arg index="1"><value>7500000</value></constructor-arg>
  		<constructor-arg index="0"><value>42</value></constructor-arg>
	</bean>

</beans>